  .hero-bg-img {
    width: 100%;
    max-height: none !important;
    min-height: 350px;
    margin: auto !important;
  }

  .hero-text-box {
    position: absolute;
    top: 9rem;
    left: 5%;
    text-align: left;
    font-size: 2.5rem;
    font-weight: bold;

    .link-action {
      border-radius: 2px;
      padding: 0.7rem 2rem;
    }
  }
}

.home-container {
  overflow: hidden;
  margin-top: 60px;

  ul {
    padding: 0px;
    margin: 0px;

    li.footer-item {
      list-style: none;
      font-size: 14px;
